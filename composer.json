{
  "name": "timmsy1998/wiq-php-backend-test",
  "description": "Tiny, framework-agnostic PHP library to consume a fictitious REST API (Great Food Ltd) with CLI demos and tests.",
  "type": "library",
  "require": {
    "php": "^8.2 || ^8.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0"
  },
  "autoload": {
    "psr-4": {
      "Wiq\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Wiq\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "scenario1": "php bin/run_scenario1.php",
    "scenario2": "php bin/run_scenario2.php"
  }
}
